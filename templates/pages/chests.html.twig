{% extends 'base.html.twig' %}

{% block title %}ClashRoyaleAPI App | Player Upcoming Chests{% endblock %}

{% block body %}
	<div class="container mb-5">
		<h1 class="text-center mb-4">Player Upcoming Chests</h1>
		
		<ul class="nav justify-content-end mb-3">
			<li class="nav-item">
		    	<a class="nav-link active" href="/player/{{ tag }}">See Player</a>
		 	</li>
			<li class="nav-item">
		    	<a class="nav-link active" href="/battles/{{ tag }}">See Battles</a>
		 	</li>
		</ul>
		
			<h5>Upcoming : </h5>
			<ul class="nav mb-5">
				{% for nextChest in data.upcoming %}
					{% if nextChest == 'gold' %}
						{% set type = 'warning' %}
					{% elseif nextChest == 'silver' %}
						{% set type = 'secondary' %}
					{% else %}
						{% set type = 'success' %}
					{% endif %}

					<!-- <li class="nav-item col-1"><h4><span class="badge badge-pill badge-{{ type }}">{{ nextChest }}</span></h4></li> -->

					{% if nextChest == 'silver' %}
						<img src="{{ asset('assets/img/chests/silverChest.png') }}" width="150">
					{% elseif nextChest == 'gold' %}
						<img src="{{ asset('assets/img/chests/goldChest.png') }}" width="150">
					{% elseif nextChest == 'giant' %}
						<img src="{{ asset('assets/img/chests/giantChest.png') }}" width="150">
					{% elseif nextChest == 'epic' %}
						<img src="{{ asset('assets/img/chests/epicChest.png') }}" width="150">
					{% elseif nextChest == 'legendary' %}
						<img src="{{ asset('assets/img/chests/legendaryChest.png') }}" width="150">
					{% elseif nextChest == 'magical' %}
						<img src="{{ asset('assets/img/chests/magicalChest.png') }}" width="150">
					{% elseif nextChest == 'superMagical' %}
						<img src="{{ asset('assets/img/chests/superMagicalChest.png') }}" width="150">
					{% else %}
						<img src="{{ asset('assets/img/dontKnow.png') }}" width="150">
					{% endif %}
				{% endfor %}
			</ul>

			<hr>

			<img src="{{ asset('assets/img/chests/giantChest.png') }}" width="150"> <span class="badge badge-pill badge-success">{{ data.giant }}</span>
			<img src="{{ asset('assets/img/chests/epicChest.png') }}" width="150"> <span class="badge badge-pill badge-success">{{ data.epic }}</span>
			<img src="{{ asset('assets/img/chests/legendaryChest.png') }}" width="150"> <span class="badge badge-pill badge-success">{{ data.legendary }}</span>
			<img src="{{ asset('assets/img/chests/magicalChest.png') }}" width="150"> <span class="badge badge-pill badge-success">{{ data.magical }}</span>
			<img src="{{ asset('assets/img/chests/superMagicalChest.png') }}" width="150"> <span class="badge badge-pill badge-success">{{ data.superMagical }}</span>
	</div>
{% endblock %}
